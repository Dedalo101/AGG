{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Python HTTP Server",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "http.server",
                "8000"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "."
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Serving HTTP on",
                    "endsPattern": "^Serving HTTP on .* port 8000"
                }
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Stop Python HTTP Server",
            "type": "shell",
            "command": "taskkill",
            "args": [
                "/F",
                "/IM",
                "python.exe"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Log Chat Debug Info",
            "type": "shell",
            "command": "echo",
            "args": [
                "üéØ Chat System Debug Instructions:",
                "1. Open Developer Tools (F12)",
                "2. Go to Console tab",
                "3. Type: debugIntercom() - to test Intercom chat",
                "4. Type: restartIntercom() - to restart if issues",
                "5. Check Network tab for failed requests",
                "6. Monitor Console for error messages"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "npm",
            "args": [
                "install"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run Playwright Tests",
            "type": "shell",
            "command": "npm",
            "args": [
                "test"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "Start Python HTTP Server",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run Playwright Tests (UI Mode)",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "test:ui"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "Start Python HTTP Server",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Validate Setup",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "validate-setup"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Deploy to GitHub Pages",
            "type": "shell",
            "command": "git",
            "args": [
                "push",
                "origin",
                "main"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "üè† Quick Start AGG Development",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Install Dependencies",
                "Start Python HTTP Server"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ]
}