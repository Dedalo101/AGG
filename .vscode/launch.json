    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "üîê Launch Admin Login",
            "url": "http://localhost:8000/admin-login.html",
            "webRoot": "${workspaceFolder}",
            "userDataDir": false,
            "runtimeArgs": [
                "--disable-web-security",
                "--auto-open-devtools-for-tabs"
            ],
            "preLaunchTask": "Start Python HTTP Server"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "üìä Launch Admin Dashboard",
            "url": "http://localhost:8000/admin-dashboard.html",
            "webRoot": "${workspaceFolder}",
            "userDataDir": false,
            "runtimeArgs": [
                "--disable-web-security",
                "--auto-open-devtools-for-tabs"
            ],
            "preLaunchTask": "Start Python HTTP Server"
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "üè† Launch AGG Homes Website",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}",
            "userDataDir": false,
            "runtimeArgs": [
                "--disable-web-security",
                "--disable-features=VizDisplayCompositor",
                "--auto-open-devtools-for-tabs"
            ],
            "preLaunchTask": "Start Python HTTP Server",
            "postDebugTask": "Stop Python HTTP Server"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "üéØ Launch Property Matching Page",
            "url": "http://localhost:8000/property-matching.html",
            "webRoot": "${workspaceFolder}",
            "userDataDir": false,
            "runtimeArgs": [
                "--disable-web-security",
                "--auto-open-devtools-for-tabs"
            ],
            "preLaunchTask": "Start Python HTTP Server"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "üåç Launch Spanish Version",
            "url": "http://localhost:8000/es/",
            "webRoot": "${workspaceFolder}",
            "userDataDir": false,
            "runtimeArgs": [
                "--disable-web-security",
                "--auto-open-devtools-for-tabs"
            ],
            "preLaunchTask": "Start Python HTTP Server"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "üá≥üá± Launch Dutch Version",
            "url": "http://localhost:8000/nl/",
            "webRoot": "${workspaceFolder}",
            "userDataDir": false,
            "runtimeArgs": [
                "--disable-web-security",
                "--auto-open-devtools-for-tabs"
            ],
            "preLaunchTask": "Start Python HTTP Server"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "üí¨ Debug Chat System",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}",
            "userDataDir": false,
            "runtimeArgs": [
                "--disable-web-security",
                "--auto-open-devtools-for-tabs"
            ],
            "preLaunchTask": "Start Python HTTP Server",
            "postDebugTask": "Log Chat Debug Info"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "üß™ Run Playwright Tests",
            "program": "${workspaceFolder}/node_modules/.bin/playwright",
            "args": [
                "test"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "test",
                "BASE_URL": "http://localhost:8000"
            },
            "preLaunchTask": "Start Python HTTP Server"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "üé≠ Run Playwright Tests (Headed)",
            "program": "${workspaceFolder}/node_modules/.bin/playwright",
            "args": [
                "test",
                "--headed"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "test",
                "BASE_URL": "http://localhost:8000"
            },
            "preLaunchTask": "Start Python HTTP Server"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "üîó Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "urlFilter": "http://localhost:8000/*"
        }
    ]
}