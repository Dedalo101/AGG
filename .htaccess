# Enable compression and caching
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
</IfModule>

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Set default expires to 1 year
    ExpiresDefault "access plus 1 year"
    
    # CSS and JavaScript files
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    
    # Images and media
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    
    # Fonts
    ExpiresByType application/x-font-ttf "access plus 1 year"
    ExpiresByType application/x-font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

<IfModule mod_headers.c>
    # Set cache control headers
    <FilesMatch "\.(css|js|jpg|jpeg|png|gif|webp|ico|woff|woff2|ttf)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Security headers
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Existing rewrite rules
RewriteEngine On
RewriteBase /

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Game routing
RewriteRule ^play/?$ /play/index.html [L]
RewriteRule ^play/snake/?$ /play/snake/index.html [L]
RewriteRule ^play/aliens/?$ /play/aliens/index.html [L]

# Main service pages routing
RewriteRule ^experts/?$ /experts/index.html [L]
RewriteRule ^market/?$ /market/index.html [L]
RewriteRule ^negotiation/?$ /negotiation/index.html [L]
